@model MvcMusicStore.Models.Album   
           @*表示视图使用强类型的Album类 -Rozer视图引擎能够理解*@

@{
    ViewBag.Title = "Album-"+@Model.Title;
}

<h2>Album:@Model.Title</h2>
<p>
    <img alt="@Model.Title" src="@Model.AlbumArtUrl" />
</p>
<div id="album-details">
    <p>
        <em>年代:</em>
        @Model.Genre.Name
    </p>
    <p>
        <em>艺术家:</em>
        @Model.Artist.Name
    </p>
    <p>
        <em>价格:</em>
        @String.Format("{0:F}",Model.Price)
    </p>
    <p class="button">
        @Html.ActionLink("加入购物车", "AddToCart", "ShoppingCart", new{id=Model.AlbumId },"")
    </p>
</div>

